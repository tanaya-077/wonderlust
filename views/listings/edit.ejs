<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
      <br /><br />
      <div>
        <label for="title" class="form-label">Title:</label>
        <input
          name="listing[title]"
          id="title"
          class="form-control"
          value="<%= listing.title %>"
          type="text"
          required
        />
        <div class="valid-feedback">Looks Good !!</div>
      </div>

      <div>
        <label for="description" class="form-label">Description:</label>
        <textarea
          name="listing[description]"
          class="form-control"
          id="description"
          required
        >
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">enter short description!!</div>
      </div>
      <div>
        <label for="image" class="form-label">Image:</label>
        <input
            name="listing[image][url]"
            id="image"
            class="form-control"
            value="<%= listing.image.url %>"
           
        />
    </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price:</label>
          <input
            name="listing[price]"
            id="price"
            class="form-control"
            value="<%= listing.price %>"
            type="number"
            required
          /><br /><br />
          <div class="invalid-feedback">enter valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country:</label>
          <input
            name="listing[country]"
            id="country"
            class="form-control"
            value="<%= listing.country %>"
            required
          /><br /><br />
          <div class="invalid-feedback">enter valid country</div>
        </div>
      </div>

      <div>
        <label for="location" class="form-label">Location:</label>
        <input
          name="listing[location]"
          id="location"
          class="form-control"
          value="<%= listing.location %>"
          type="text"
          required
        />
        <br /><br />
        <div class="invalid-feedback">enter valid location</div>
      </div>

      <button class="btn btn-dark edit-btn mb-3">Edit</button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
