<% layout("../layouts/boilerplate") %>
    <h3>Create a new listing</h3>
    <br><br>
    <div class="row">
        <div class="col-8 offset-2">
    <form  method="POST" action="/listings"  class="needs-validation" novalidate><br><br>
        <div class="mb-3">
            <label for="title" class="form-label" >Title</label>
            <input name="listing[title]" class="form-control" placeholder="add a catchy title" type="text" required>
            
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        
        <div  class="mb-3">
            <label for="description" class="form-label" >description</label>
            <textarea name="listing[description]" class="form-control" required>enter description</textarea>

        </div>
        <div  class="mb-3">
            <label for="image" class="form-label" >image</label>
            <input name="listing[image]" placeholder="enter image/url" class="form-control" >
        </div>
        
        <div class="row">
        <div  class="mb-3 col-md-4">
            <label for="1200" class="form-label" >price</label>
            <input name="listing[price]" placeholder="enter price" class="form-control" required>

            <div class="invalid-feedback">
                Please enter valid price
              </div>

        </div>
       
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label" >country</label>
            <input name="listing[country]" placeholder="enter country" class="form-control" required>
            <div class="invalid-feedback">
                enter valid country
              </div>
        </div  class="mb-3">
       

    </div>
        <div  class="mb-3">
            <label for="location" class="form-label" >location</label>
            <input name="listing[location]" placeholder="jaipur/rajasthan" type="text" class="form-control" required>
            <div class="invalid-feedback">
                enter valid location
              </div>
        </div>
        
        
        <button class="btn btn-dark add-btn mt-3">add</button>
        <br><br>
    </form>
</div>
</div>